#include "stdafx.h"
#include <iostream>
using namespace std; 
/*программа 2*/
int main()
{
	setlocale(0, "");
	int k1 = 0, k2 = 0, k3 = 0;
	cout << "Введите числовое значение k1. k1 = ";
	cin >> k1;
	k2 = k1 + 24;
	k3 = 2 * (k1 + k2);
	cout << "k2 ="<< k2<< endl; 
	cout << "k3 ="<< k3;
	system("pause");
	return 0;
}
